{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Um projeto do zero para quem curte se desafiar via Curso.Dev . Implementação do : https://www.tabnews.com.br/",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run wait-for-postgres && npm run migration:up && next dev",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "test": "npm run services:up && concurrently --names next,jest --hide next -k --success command-jest \"next dev\" \"jest --runInBand --verbose \" ",
    "test:watch": "jest --watch --runInBand",
    "test:watchall": "jest --watchAll --runInBand",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "migration:create": "node-pg-migrate -m infra/migrations create",
    "migration:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "wait-for-postgres": "node infra/scripts/wait-for-postgres.js",
    "prepare": "husky",
    "commit": "cz",
    "lint:secretlint:check": "secretlint --maskSecrets ."
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "async-retry": "^1.3.3",
    "dotenv": "^16.4.7",
    "dotenv-expand": "^12.0.1",
    "next": "^15.1.2",
    "node-pg-migrate": "^7.8.0",
    "pg": "^8.13.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.17.0",
    "@secretlint/secretlint-rule-preset-recommend": "^9.0.0",
    "commitizen": "^4.3.1",
    "concurrently": "^9.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "9.17.0",
    "eslint-config-next": "15.1.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.10.0",
    "eslint-plugin-no-secrets": "^2.1.1",
    "eslint-plugin-react": "^7.37.3",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "secretlint": "^9.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*": [
      "prettier --check",
      "secretlint --maskSecrets"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint"
    ]
  }
}
